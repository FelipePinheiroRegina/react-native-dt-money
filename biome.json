{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"files": {
		"includes": [
			"**",
			"!**/.vscode",
			"!**/ios",
			"!**/android",
			"!**/.expo",
			"!**/assets"
		]
	},

	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noConsole": "error"
			}
		}
	},
	"assist": {
		"enabled": false
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "double",
			"arrowParentheses": "always",
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"indentStyle": "space",
			"trailingCommas": "es5"
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		}
	}
}
